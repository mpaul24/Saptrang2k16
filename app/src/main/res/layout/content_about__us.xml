<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_about__us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="delhi.android.nit.com.saptrang2k16.About_Us"
    tools:showIn="@layout/activity_about__us">
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrview"
        android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_logo"
                android:src="@drawable/nitd"
                android:layout_width="200dp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_height="200dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_scrollFlags="scroll|enterAlways" />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/about_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_logo"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@android:color/background_light"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarSize="3dp"
                    android:scrollbarThumbVertical="@android:color/holo_blue_dark">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/about"
                            android:gravity=""
                            android:layout_width="307dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/image_logo"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="kwjkwjjebfkwebfkwfbwkbfiwibfiwbifbwibfiwbifbwif
                        wfbweifbwibfibweifbiewfibweifbewibfibwifbweifbiwebfibwifbwibfi4
                        fkbwibfiweifbiwebfiwiebfiewifbiwbifbiwebfiwbiefbiewbfiewibfiwebi
                        wkefbwbfiwefibwiebfiwebifiewbfibewifbiwebfibwiefbiewbfibwfibwi
                        wfebwifbiwebfibwifbiebwifbiwibfewibfibwoifowfowebfobowbfbweofbwo"
                            android:textColor="@android:color/tab_indicator_text"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/about"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/fb_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:onClick="startIntent"
                                android:src="@drawable/abc" />

                            <ImageView
                                android:id="@+id/insta_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:onClick="startIntent"
                                android:src="@drawable/abc" />

                            <ImageView
                                android:id="@+id/twitter_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:onClick="startIntent"
                                android:src="@drawable/abc" />

                            <ImageView
                                android:id="@+id/gplus_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:onClick="startIntent"
                                android:src="@drawable/abc" />

                            <ImageView
                                android:id="@+id/youtube_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:onClick="startIntent"
                                android:src="@drawable/abc" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
