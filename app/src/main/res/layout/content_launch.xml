<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="delhi.android.nit.com.saptrang2k16.LaunchActivity"
    tools:showIn="@layout/activity_launch">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#424242"
                android:id="@+id/rvMain">
            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:layout_below="@+id/rvMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/asdf"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bookmyshow"
                    />
                <ImageView
                    android:id="@+id/asdfg"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/asdf"
                    android:scaleType="centerCrop"
                    android:src="@drawable/flipkart"
                    />
                <ImageView
                    android:id="@+id/asdfgh"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/asdf"
                    android:scaleType="centerCrop"
                    android:src="@drawable/myntra"
                    />

                <TextView
                    android:layout_below="@+id/asdf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Â© 2017 Saptrang All Right Reserved"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:gravity="center" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>







</RelativeLayout>
